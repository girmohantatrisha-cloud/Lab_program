ASSIGNMENT 46: calculate the sum of the first 10 even natural numbers
#include <stdio.h>
// Function to calculate the sum of the first 10 even natural numbers
int sumOfEvenNumbers() {
    int sum = 0;
    for (int i = 1; i <= 10; i++) {
        sum += 2 * i;  // Even numbers are 2, 4, 6, 8, ... , 20
    }
    return sum;
}
int main() {
    int result;
    result = sumOfEvenNumbers();  // Call the function
    printf("Sum of first 10 even natural numbers = %d\n", result);
    return 0;
}
ASSIGNMENT 47:
#include <stdio.h>

// Function to find GCD using recursion
int gcd(int a, int b) {
    if (b == 0)
        return a;          // Base case
    else
        return gcd(b, a % b);  // Recursive case
}

int main() {
    int num1, num2, result;

    printf("Enter two numbers: ");
    scanf("%d %d", &num1, &num2);

    result = gcd(num1, num2);  // Function call

    printf("GCD of %d and %d is %d\n", num1, num2, result);
    return 0;
}

ASSIGNMENT 48:
#include <stdio.h>

// Recursive function to find Fibonacci number
int fibonacci(int n) {
    if (n == 0)
        return 0;       // Base case 1
    else if (n == 1)
        return 1;       // Base case 2
    else
        return fibonacci(n - 1) + fibonacci(n - 2);  // Recursive case
}

int main() {
    int n, i;

    printf("Enter the number of terms: ");
    scanf("%d", &n);

    printf("Fibonacci Series: ");
    for (i = 0; i < n; i++) {
        printf("%d ", fibonacci(i));
    }

    printf("\n");
    return 0;
}
ASSIGNMENT 49:
#include <stdio.h>

int main() {
    int arr[100], n, key, i, found = 0;

    printf("Enter the number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements: ", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter the element to search: ");
    scanf("%d", &key);

    // Linear Search logic
    for (i = 0; i < n; i++) {
        if (arr[i] == key) {
            printf("Element found at position %d\n", i + 1);
            found = 1;
            break;
        }
    }

    if (!found)
        printf("Element not found in the array\n");

    return 0;
}
ASSIGNMENT 50:
#include <stdio.h>

int main() {
    int arr[100], n, i;
    int min, max;

    printf("Enter the number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements: ", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Initialize min and max with the first element
    min = max = arr[0];

    // Loop to find min and max
    for (i = 1; i < n; i++) {
        if (arr[i] < min)
            min = arr[i];
        if (arr[i] > max)
            max = arr[i];
    }

    printf("Minimum element = %d\n", min);
    printf("Maximum element = %d\n", max);

    return 0;
}

ASSIGNMENT 51:
#include <stdio.h>

int main() {
    int arr[100], n, i;
    int evenCount = 0, oddCount = 0;

    printf("Enter the number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements: ", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Count even and odd numbers
    for (i = 0; i < n; i++) {
        if (arr[i] % 2 == 0)
            evenCount++;
        else
            oddCount++;
    }

    printf("Number of even elements = %d\n", evenCount);
    printf("Number of odd elements = %d\n", oddCount);

    return 0;
}

ASSIGNMENT 52:
#include <stdio.h>

int main() {
    int a[10][10], b[10][10], sum[10][10];
    int rows, cols, i, j;

    // Input size of the matrices
    printf("Enter the number of rows and columns: ");
    scanf("%d %d", &rows, &cols);

    // Input elements of first matrix
    printf("Enter elements of first matrix:\n");
    for (i = 0; i < rows; i++) {
        for (j = 0; j < cols; j++) {
            scanf("%d", &a[i][j]);
        }
    }

    // Input elements of second matrix
    printf("Enter elements of second matrix:\n");
    for (i = 0; i < rows; i++) {
        for (j = 0; j < cols; j++) {
            scanf("%d", &b[i][j]);
        }
    }

    // Add corresponding elements
    for (i = 0; i < rows; i++) {
        for (j = 0; j < cols; j++) {
            sum[i][j] = a[i][j] + b[i][j];
        }
    }

    // Display the resulting sum matrix
    printf("Sum of the two matrices:\n");
    for (i = 0; i < rows; i++) {
        for (j = 0; j < cols; j++) {
            printf("%d ", sum[i][j]);
        }
        printf("\n");
    }

    return 0;
}
ASSIGNMENT 53:
#include <stdio.h>

int main() {
    int matrix[10][10], transpose[10][10];
    int rows, cols, i, j;

    // Input size of the matrix
    printf("Enter the number of rows and columns: ");
    scanf("%d %d", &rows, &cols);

    // Input elements of the matrix
    printf("Enter elements of the matrix:\n");
    for (i = 0; i < rows; i++) {
        for (j = 0; j < cols; j++) {
            scanf("%d", &matrix[i][j]);
        }
    }

    // Compute the transpose
    for (i = 0; i < rows; i++) {
        for (j = 0; j < cols; j++) {
            transpose[j][i] = matrix[i][j];
        }
    }

    // Display the transpose
    printf("Transpose of the matrix:\n");
    for (i = 0; i < cols; i++) {
        for (j = 0; j < rows; j++) {
            printf("%d ", transpose[i][j]);
        }
        printf("\n");
    }

    return 0;
}

ASSIGNMENT 54:
#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    int i, len, flag = 0;

    printf("Enter a string: ");
    gets(str);  // Note: gets() is used for simplicity (unsafe). Prefer fgets() in real code.

    len = strlen(str);

    // Check palindrome
    for (i = 0; i < len / 2; i++) {
        if (str[i] != str[len - i - 1]) {
            flag = 1;
            break;
        }
    }

    if (flag == 0)
        printf("The string is a palindrome.\n");
    else
        printf("The string is not a palindrome.\n");

    return 0;
}

ASSIGNMENT 55:
#include <stdio.h>

// Function to find length (manual input, no '\0')
int stringLength(char str[], int n) {
    int count = 0;
    for (int i = 0; i < n; i++)
        count++;
    return count;
}

// Function to copy one string to another
void stringCopy(char src[], char dest[], int n) {
    for (int i = 0; i < n; i++) {
        dest[i] = src[i];
    }
}

// Function to compare two strings
int stringCompare(char str1[], char str2[], int n1, int n2) {
    int n = (n1 < n2) ? n1 : n2;  // Compare only till the smaller length
    for (int i = 0; i < n; i++) {
        if (str1[i] != str2[i])
            return (str1[i] - str2[i]);
    }

    // If all matched till min length, check length difference
    if (n1 == n2)
        return 0;
    else
        return (n1 - n2);
}

// 4?? Function to concatenate two strings
void stringConcat(char str1[], char str2[], char result[], int n1, int n2) {
    int i, j;
    for (i = 0; i < n1; i++) {
        result[i] = str1[i];
    }
    for (j = 0; j < n2; j++) {
        result[i + j] = str2[j];
    }
}

int main() {
    char str1[100], str2[100], copy[100], concat[200];
    int n1, n2;

    printf("Enter length of first string: ");
    scanf("%d", &n1);
    printf("Enter first string (no spaces): ");
    for (int i = 0; i < n1; i++)
        scanf(" %c", &str1[i]);

    printf("Enter length of second string: ");
    scanf("%d", &n2);
    printf("Enter second string (no spaces): ");
    for (int i = 0; i < n2; i++)
        scanf(" %c", &str2[i]);

    // 1. Find length
    printf("\nLength of first string = %d", stringLength(str1, n1));

    // 2. Copy
    stringCopy(str1, copy, n1);
    printf("\nCopied string: ");
    for (int i = 0; i < n1; i++)
        printf("%c", copy[i]);

    // 3. Compare
    int cmp = stringCompare(str1, str2, n1, n2);
    if (cmp == 0)
        printf("\nStrings are equal.");
    else if (cmp > 0)
        printf("\nFirst string is greater.");
    else
        printf("\nSecond string is greater.");

    // 4. Concatenate
    stringConcat(str1, str2, concat, n1, n2);
    printf("\nConcatenated string: ");
    for (int i = 0; i < n1 + n2; i++)
        printf("%c", concat[i]);

    printf("\n");
    return 0;
}
